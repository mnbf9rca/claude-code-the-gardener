[Unit]
Description=Run Gardener Sync every 15 minutes
Documentation=https://github.com/mnbf9rca/claude-code-the-gardener

[Timer]
# Start 5 minutes after boot (gives network time to settle)
OnBootSec=5min

# Run every 15 minutes after the previous timer trigger
# OnUnitActiveSec fires relative to the timer's last activation, giving
# a consistent wall-clock cadence regardless of how long the service takes
OnUnitActiveSec=15min

# If Pi was off, run missed syncs when it comes back online
Persistent=true

[Install]
WantedBy=timers.target
