{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run HTTP Server",
      "type": "debugpy",
      "request": "launch",
      "module": "run_http",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/app",
      "envFile": "${workspaceFolder}/app/.env",
      "justMyCode": false
    },
    {
      "name": "Debug MCP Server (FastMCP Dev)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/app/.venv/bin/fastmcp",
      "args": [
        "dev",
        "server.py:mcp"
      ],
      "cwd": "${workspaceFolder}/app",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/app"
      }
    },
    {
      "name": "Debug Current Test File",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/app/.venv/bin/pytest",
      "args": [
        "${file}",
        "-v",
        "-s"
      ],
      "cwd": "${workspaceFolder}/app",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug All Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/app/.venv/bin/pytest",
      "args": [
        "-v",
        "-s"
      ],
      "cwd": "${workspaceFolder}/app",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Serve Static Site (Port 8080)",
      "type": "node-terminal",
      "request": "launch",
      "command": "python3 -m http.server 8080",
      "cwd": "${workspaceFolder}/static_site_generator/output",
      "serverReadyAction": {
        "pattern": "Serving HTTP on.*port ([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ]
}
