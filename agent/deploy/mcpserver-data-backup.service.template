[Unit]
Description=MCP Server Data Git Backup
Documentation=https://github.com/yourusername/claude-code-the-gardener

[Service]
Type=oneshot
User=__MCPSERVER_USER__
Group=__MCPSERVER_USER__
WorkingDirectory=__MCPSERVER_DATA_DIR__

# Run the backup script
ExecStart=__MCPSERVER_HOME__/backup-mcp-data.sh

# Log all output to journal
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
