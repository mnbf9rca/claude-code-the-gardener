# MCP Server Configuration
MCP_HOST=0.0.0.0                       # Host to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
MCP_PORT=8000                          # Port for HTTP server
MCP_PUBLIC_HOST=localhost              # Public hostname/IP for photo URLs (e.g., localhost, raspberry.local, 192.168.1.100)
LOG_LEVEL=INFO                         # Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)

# Camera Configuration
CAMERA_ENABLED=true                    # Set to false to use mock mode
CAMERA_DEVICE_INDEX=0                  # USB camera index (0 for first camera, 1 for second, etc.)
CAMERA_SAVE_PATH=./photos              # Directory to save captured photos
CAMERA_IMAGE_WIDTH=1920                # Image width in pixels
CAMERA_IMAGE_HEIGHT=1080               # Image height in pixels
CAMERA_IMAGE_QUALITY=85                # JPEG quality (1-100)
CAMERA_CAPTURE_TIMEOUT=5               # Timeout in seconds for camera capture

# Platform-specific settings
# On Mac: typically use 0 or 1
# On Raspberry Pi: typically use 0 for /dev/video0, 1 for /dev/video1, etc.

# Home Assistant Configuration
HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=your_long_lived_access_token_here
LIGHT_ENTITY_ID=switch.smart_plug_mini

# Email Notifications (Optional)
# Configure SMTP to receive email notifications when the agent sends you messages
# If not configured, email notifications are gracefully skipped
SMTP_HOST=smtp.gmail.com              # SMTP server hostname (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_PORT=587                          # SMTP port (default: 587 for STARTTLS)
SMTP_USER=your-email@gmail.com        # SMTP username (usually your email address)
SMTP_PASSWORD=your-app-password       # SMTP password or app-specific password
SMTP_TO=recipient@example.com         # Email address to send notifications to
SMTP_FROM=your-email@gmail.com        # Optional: From address (defaults to SMTP_USER if not set)